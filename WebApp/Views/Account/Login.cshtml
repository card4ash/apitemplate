@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LogInChameleonAdmin.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h6 class="card-title">Welcome back, please login your account</h6>
    </div>
    <br />
    <form asp-action="Login" asp-controller="Account" method="post" asp-antiforgery="true" asp-route-ReturnUrl="@ViewBag.ReturnUrl">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label class="control-label">User Name *</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ft ft-user"></i></span>
                            </div>
                            <input type="text" class="form-control" asp-for="UserName" placeholder="">
                        </div>
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label class="control-label">Password *</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ft ft-lock"></i></span>
                            </div>
                            <input type="password" class="form-control" asp-for="Password" placeholder="" >
                            <div class="input-group-append">
                                <span id="togglePassSpan" onclick="togglePass(document.getElementById('Password'), 'togglePassIcon')" class="input-group-text"><i id="togglePassIcon" class="ft ft-eye-off"></i></span>
                            </div>
                        </div>
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 text-danger">
                    <span>@TempData["errorMsg"]</span>
                </div>
                <div class="col-12 mt-0">
                    <button type="submit" class="btn btn-success btn-lg text-uppercase btn-block">Sign In</button>
                </div>
                @*<div class="col-12 mt-1 text-center">
                    <span>Doesn't registered yet? Click <a asp-action="UserRegister" asp-controller="Account" class="btn-link">here</a> to register.</span>
                </div>*@
            </div>
        </div>
    </form>
</div>
<script>
    function togglePass(e, iconId) {
        var pField = e;
        var value = pField.value;
        if (pField.type == 'password') {
            pField.type = 'text';
            $("#" + iconId).removeClass("ft-eye-off");
            $("#" + iconId).addClass("ft-eye");
        } else {
            pField.type = 'password';
            $("#" + iconId).removeClass("ft-eye");
            $("#" + iconId).addClass("ft-eye-off");
        }
        pField.value = value;
    }
</script>
